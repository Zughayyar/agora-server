# Copy this file to .env in your project root
# Application Configuration
APP_ENV=development
APP_PORT=3000
APP_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agora_db
DB_USER=agora_user
DB_PASSWORD=agora_password
DB_SSL_MODE=disable

# Database Connection Pool Configuration (Optional - defaults provided)
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME_MINUTES=15
DB_CONN_MAX_IDLE_TIME_MINUTES=5

# Production/Docker Configuration
# When using Docker Compose, the services communicate via Docker network
# The postgres service is accessible as 'postgres' hostname automatically
# For production, change DB_SSL_MODE to 'require' or higher 